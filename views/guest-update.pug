include includes/header.pug 
block content 
    link(rel="stylesheet", href="/stylesheets/dashboard.css")
    body
        div(class="container pt-3")
            div(class="d-flex justify-content-between")
                h5.font-bold Update your Guest
                
            .row.justify-content-center
                .col-md-6
                    .form-field
                        form(method="POST")
                            div.row 
                                div(class="col-md-6")
                                    label(class="label") First Name :
                                    input(type="text" class="form-control mb-3" name="firstName" value= guestDB.firstName)
                                div(class="col-md-6")
                                    label(class="label") Last Name :
                                    input(type="text" class="form-control mb-3" name="lastName" value= guestDB.lastName)
                                div(class="col-md-4")
                                    label(class="label") Table Number :
                                    input(class="form-control mb-3 custom-select" name="tableNumber" value= guestDB.tableNumber)
                                div(class="col-md-4")
                                    label(class="label") Partner :
                                    input(class="form-control mb-3 custom-select" name="extraGuest" value= guestDB.extraGuest)

                            div(class="text-center")
                                button(type="submit" class="btn main-btn") Continue
    







    include includes/footer.pug 