include includes/header.pug 
block content 
    link(rel="stylesheet", href="/stylesheets/dashboard.css")
    body
        div(class="container pt-3")
            div(class="d-flex justify-content-between")
                h5.font-bold Enter Your Guest Details
                p #[a(href="/admin/all-guests" class="ace-btn") All Guests #[i(class="fa fa-plus ml-1")]]

            if message
                span #{message}
            .row.justify-content-center
                .col-md-6
                    .form-field
                        form(method="POST")
                            div.row 
                                div(class="col-md-6")
                                    label(class="label") First Name :
                                    input(type="text" class="form-control mb-3" name="firstName" required)
                                div(class="col-md-6")
                                    label(class="label") Last Name :
                                    input(type="text" class="form-control mb-3" name="lastName" required)
                                div(class="col-md-4")
                                    label(class="label") Table Number :
                                    select(class="form-control mb-3 custom-select" name="tableNumber" required)
                                        option(value="" selected disabled="disabled") ------------
                                        option(value="one") 1
                                        option(value="two") 2
                                        option(value="three") 3
                                        option(value="four") 4
                                        option(value="five") 5
                                        option(value="six") 6
                                        option(value="seven") 7
                                        option(value="eight") 8
                                        option(value="nine") 9
                                        option(value="ten") 10
                                div(class="col-md-4")
                                    label(class="label") Partner :
                                    select(class="form-control mb-3 custom-select" name="extraGuest" required)
                                        option(value="" selected disabled="disabled") ------------
                                        option(value="none") 0
                                        option(value="one") 1

                            div(class="text-center")
                                button(type="submit" class="btn main-btn") Continue
    







    include includes/footer.pug 