include includes/header.pug 
block content 
    link(rel="stylesheet", href="/stylesheets/dashboard.css")
    body
        div(class="container pt-3")
            h5.font-bold Welcome back to your login page, ADMIN!!!!!!
            p.font-italic #[strong Note :] Your email is your default password
            .row.justify-content-center
                .col-md-10.card
                    .form-field
                        form(method="POST")
                            div.row 
                                div(class="col-md-6")
                                    label(class="label") Email :
                                    input(type="text" class="form-control mb-3" name="email" required)
                                div(class="col-md-6")
                                    label(class="label") Password :
                                    input(type="password" class="form-control mb-3" name="password" required)

                            div(class="text-center")
                                button(type="submit" class="btn main-btn") Continue







    include includes/footer.pug 